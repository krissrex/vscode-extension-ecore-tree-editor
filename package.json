{
  "name": "ecore-tree-editor",
  "publisher": "krissrex",
	"displayName": "Ecore Tree-editor",
	"description": "Modify Ecore and XMI files in a Tree view",
  "version": "0.0.1",
  "license": "MIT",
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Visualization",
		"Programming Languages"
  ],
  "keywords": ["ecore", "model-driven development", "tree-editor", "emf", "eclipse modeling framework"],
	"activationEvents": [
		"onCommand:ecore-tree-editor.helloWorld",
		"onLanguage:ecore",
		"onLanguage:emof",
		"onLanguage:xmi"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ecore-tree-editor.helloWorld",
				"title": "Ecore: Hello World"
			}
		],
		"customEditors": [
			{
				"viewType": "ecore-tree-editor.treeEditor",
				"displayName": "Ecore Tree editor",
				"priority": "default",
				"selector": [
					{
						"filenamePattern": "*.ecore"
					},
					{
						"filenamePattern": "*.xmi"
					},
					{
						"filenamePattern": "*.emof"
					}
				]
			}
    ],
    "configuration": {
      "type": "object",
      "title": "Ecore Tree-editor",
      "properties": {
        "ecore-tree-editor.log.loggingLevel": {
          "type": "string",
          "enum": [
            "off",
            "fatal",
            "error",
            "warn",
            "info",
            "debug",
            "trace"
          ],
          "default": "info",
          "description": "The verbosity of logging. The Order is off < fatal < error < warn < info < debug < trace.",
          "scope": "resource"
        },
        "ecore-tree-editor.log.sourceLocationTracking": {
          "type": "boolean",
          "default": false,
          "description": "Should Source Code Location Info be added to log entries, DANGER - May be very slow, only use in debugging scenarios",
          "scope": "resource"
        }
      }
    }
  },
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.50.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"eslint": "^7.9.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"@vscode-logging/logger": "^1.2.1"
	}
}
